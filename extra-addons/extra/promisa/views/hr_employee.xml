<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_form_inherit_promisa" model="ir.ui.view">
        <field name="name">hr.employee.inherit.promisa</field>
        <field name="model">hr.employee</field>
        <field name="priority">21</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='address_home_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='address_home_id']" position="after">
                <field name="address_char"/>
            </xpath>
            <xpath expr="//group[@name='identification_group']" position="inside">
                <field name="locker_no"/>
            </xpath>
            <xpath expr="//page[@name='info_cdfi']" position="replace">
                <page name="info_cdfi" string="CFDI 3.3" groups="promisa.group_promisa_rh">
                    <group cols="4">
                        <group string="Detalles de Pago">
                            <field name="no_empleado"/>
                            <field name="tipo_pago"/>
                            <field name="banco" attrs="{'invisible':[('tipo_pago','not in',('transferencia','deposito'))]}"/>
                            <field name="no_cuenta" attrs="{'invisible':[('tipo_pago','not in',('transferencia','deposito'))]}"/>
                            <field name="tipo_cuenta" attrs="{'invisible':[('tipo_pago','not in',('transferencia','deposito'))]}"/>
                            <field name="diario_pago" attrs="{'invisible':[('tipo_pago','not in',('transferencia','deposito'))]}"/>
                        </group>
                        <group string="InformaciÃ³n fiscal">
                            <field name="regimen"/>
                            <field name="contrato"/>
                            <field name="jornada"/>
                        </group>
                    </group>
                    <group cols="4">
                        <group string="Registros">
                            <field name="rfc"/>
                            <field name="curp"/>
                            <field name="segurosocial"/>
                            <field name="correo_electronico"/>
                            <field name="estado"/>
                            <field name="registro_patronal_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
